{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "removeComments": true,
    "lib": ["dom", "es5", "es6", "es2015", "es2016", "es2017", "es2018", "esnext"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./lib",
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "types": ["node", "cypress"],
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
